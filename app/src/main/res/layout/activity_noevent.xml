<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.mobilecourseproject.poliapp.time_schedule.InfoLecture">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#88676767">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.08"
            android:layout_height="20dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.84"
            android:layout_height="130dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:orientation="vertical"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:id="@+id/ll1" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:background="@color/myLightPrimaryColor"
                        android:padding="10dp"
                        android:text="No events"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:gravity="bottom"
                        android:layout_marginTop="10dp"
                        android:paddingTop="10dp"
                        android:padding="10dp"
                        android:text="Click the button to add one."/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:paddingBottom="10dp"
                        android:id="@+id/colorLabel2"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.75"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ok_button"
                        android:layout_weight="0.2"
                        android:text="OK"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="bottom"
                        android:background="@color/white"
                        android:textColor="@color/myAccentColor"
                        android:padding="7dp"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.08"
            android:layout_height="20dp">

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
