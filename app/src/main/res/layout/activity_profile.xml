<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:id="@+id/parentView"
    >
    ​
    <android.support.design.widget.AppBarLayout
        android:id="@+id/materialup.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            ​
            <ImageView
                android:id="@+id/materialup.profile_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/material_flat3"
                app:layout_collapseMode="parallax"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
        ​
        <android.support.v7.widget.Toolbar
            android:id="@+id/materialup.toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="?colorPrimary"
            android:layout_marginTop="-48dp"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|snap"
            style="@style/ToolBarWithNavigationBack"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_avatar"
            android:elevation="8dp"
            app:border_width="2dp"
            app:border_color="#FFF"
            app:layout_scrollFlags="scroll"
            />
        ​​
        <LinearLayout
            android:id="@+id/materialup.title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_scrollFlags="scroll|snap"
            >
            ​
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:text="Enrico Di Fazio"
                android:id="@+id/name"
                android:textColor="@android:color/white"
                />
            ​
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:text="Student at Politecnico di Torino"
                android:id="@+id/professionalHeadline"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                />
            ​
        </LinearLayout>
        ​
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/materialup.viewpager"
            android:layout_marginTop="35dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:scrollbars="vertical"
            android:paddingBottom="60dp"
            >

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPaddingRight="8dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingBottom="8dp"
                android:id="@+id/aboutMeCardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="ABOUT ME"
                            android:textAppearance="@style/TextAppearance.Header"
                            style="@style/TextComponent.ItemRow"
                            />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:id="@+id/editAboutMe"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="editAboutMe"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingExtra="6dp"
                        android:id="@+id/aboutMe"
                        android:textIsSelectable="true"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPaddingRight="8dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingBottom="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Basic info"
                            android:textAppearance="@style/TextAppearance.Header"
                            style="@style/TextComponent.ItemRow"
                            />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:id="@+id/editBasicInfo"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="editBasicInfo"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First name   "
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.ItemExample"
                            />
                        <TextView
                            android:id="@+id/firstName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enrico"
                            android:textIsSelectable="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last name   "
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.ItemExample"
                            />
                        <TextView
                            android:id="@+id/lastName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Di Fazio"
                            android:textIsSelectable="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/dateOfBirthWrapper"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of birth   "
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.ItemExample"
                            />
                        <TextView
                            android:id="@+id/dateOfBirth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23/01/1992"
                            android:textIsSelectable="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/addressWrapper"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address   "
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.ItemExample"
                            />
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Via Dante Di Nanni 29\nTurin (TO), 10138\nItaly"
                            android:textIsSelectable="true"
                            android:gravity="right"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/mobilephoneWrapper"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile phone   "
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.ItemExample"
                            />
                        <TextView
                            android:id="@+id/mobilePhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+39 3337855488"
                            android:textIsSelectable="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/emailWrapper"
                        android:paddingBottom="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email address   "
                            android:layout_weight="1"
                            android:textAppearance="@style/TextAppearance.ItemExample"
                            />
                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="enrico.difazio@outlook.com"
                            android:textIsSelectable="true"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPaddingRight="8dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingBottom="8dp"
                android:id="@+id/languagesCardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="LANGUAGES"
                            android:textAppearance="@style/TextAppearance.Header"
                            style="@style/TextComponent.ItemRow"
                            />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:id="@+id/editLanguages"
                            android:src="@android:drawable/ic_menu_edit"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="editLanguages"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingExtra="6dp"
                        android:id="@+id/languages"
                        android:textIsSelectable="true"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPaddingRight="8dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingBottom="8dp"
                android:id="@+id/skillsCardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Techinical skills"
                            android:textAppearance="@style/TextAppearance.Header"
                            style="@style/TextComponent.ItemRow"
                            />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:id="@+id/editSkills"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="editSkills"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:lineSpacingExtra="6dp"
                        android:id="@+id/skills"
                        android:textIsSelectable="true"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPaddingRight="8dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingBottom="8dp"
                android:id="@+id/educationsCardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/educationsContainer"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:textAppearance="@style/TextAppearance.Header"
                            style="@style/TextComponent.ItemRow"
                            />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:clickable="true"
                            android:id="@+id/editEducation"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="editEducations"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:contentPaddingRight="8dp"
                app:contentPaddingLeft="8dp"
                app:contentPaddingBottom="8dp"
                android:id="@+id/jobsCardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/jobsContainer"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="JOB EXPERIENCES"
                            android:textAppearance="@style/TextAppearance.Header"
                            style="@style/TextComponent.ItemRow"
                            />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:clickable="true"
                            android:id="@+id/editJobExperiences"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="editJobExperiences"/>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/linksCardView"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:text="LINKS"
                            android:textAppearance="@style/TextAppearance.Header"
                            style="@style/TextComponent.ItemRow"
                            />
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="10dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:clickable="true"
                            android:id="@+id/editLinks"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:onClick="editOther"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My website"
                        android:textAppearance="@style/TextAppearance.ItemExample"
                        android:drawableRight="@drawable/ic_arrow_forward_24dp"
                        style="@style/TextComponent.ItemRow.Selectable"
                        />

                    <TextView
                        android:id="@+id/linkedin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My LinkedIn page"
                        android:textAppearance="@style/TextAppearance.ItemExample"
                        android:drawableRight="@drawable/ic_arrow_forward_24dp"
                        style="@style/TextComponent.ItemRow.Selectable"
                        />

                    <TextView
                        android:id="@+id/facebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Facebook profile"
                        android:textAppearance="@style/TextAppearance.ItemExample"
                        android:drawableRight="@drawable/ic_arrow_forward_24dp"
                        style="@style/TextComponent.ItemRow.Selectable"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:elevation="8dp"
        android:src="@drawable/mail"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:id="@+id/sendMessageFab"
        app:layout_anchor="@id/materialup.appbar"
        app:layout_anchorGravity="bottom|right|end"
        />
    ​
</android.support.design.widget.CoordinatorLayout>